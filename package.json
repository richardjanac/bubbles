{
  "name": "paddock-bubbles",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:server\"",
    "dev:next": "next dev",
    "dev:server": "tsx watch --tsconfig tsconfig.server.json server/index.ts",
    "build": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "start": "next start",
    "start:server": "node dist/server/index.js",
    "lint": "next lint"
  },
  "dependencies": {
    "react": "^19",
    "react-dom": "^19",
    "next": "15.1.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "concurrently": "^8.2.2"
  }
}
